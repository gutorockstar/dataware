<?php

$form = $this->form;
$form->prepare();
$form->setAttribute('action', $this->url('login'));

$formLogin = $this->form()->openTag($form);              
$formLogin .= "<fieldset>";
$formLogin .= $this->fieldRow($form->get('username'));
$formLogin .= $this->fieldRow($form->get('password'));
$formLogin .= "<input type='submit' name='send' class='btn btn-primary loading' value='Logar'>";
$formLogin .= "</fieldset>";
$formLogin .= $this->form()->closeTag();

$panel = new \System\Model\Panel('Efetuar login', $formLogin, 'fa-user', 'width: 30%; margin-top: 5%; float: center !important');
echo $this->PanelHelper($panel);

?>